.modify {
	width: 50%;
	position: relative;
}

.modifyButton {
	position: absolute;
	top: 7px;
	right: 16px;
}

.mysubmit {
	width:90%;
	margin: 0 auto;
	padding: 20px 0px;
}

.myTbutton {
	width: 90%;
	margin: 0 auto;
	padding: 4px 0px;
	display: flex;
	justify-content:space-around;
}
.myTbutton>button{
	padding: 0px 30px;
}
.myconfirm{
	margin-left:5px;
}
.myconfirm+.mycancel {
    margin-left: 114px;
}
.myfcerror{
	width: 53%;
	height: 27px;
	padding: 0 10px;
	margin: 0 auto;
	margin-left:110px;
	background: #a10;
	color: #fff;
	background: #a10;
	box-sizing: border-box;
	line-height: 27px;
	display: block;
	transition: all .3s;
}
input.error,input.error:focus,input.error:hover{
	color: #000;
	border: 1px solid #a10;
}
input.ok,input.ok:focus,input.ok:hover{
	border: 1px solid rgb(51,171,159);
}
input.ok+i:before{
	font-family: "iconfont" !important;
	position: absolute;
	right: 10px;
	top: 7px;
	content: '\e645';
	color: rgb(51,171,159);
	font-size: 20px;
	font-weight: 600;
}
input.ok+i.vCode:before{
	right: 85px;
}
button[disabled="disabled"],
button[disabled="disabled"]:hover{
	opacity: .5;
	cursor: not-allowed;
}
.mpassword{
	margin-bottom:0px;
}
.my_p{
	height:30px;
	overflow: hidden;
	padding: 6px 0px;
}

/*统计图*/

